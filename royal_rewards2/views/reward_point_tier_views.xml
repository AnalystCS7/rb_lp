<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_reward_point_tier_tree" model="ir.ui.view">
            <field name="name">reward.point.tier.tree</field>
            <field name="model">reward.point.tier</field>
            <field name="arch" type="xml">
                <tree string="Reward Point Tiers">
                    <field name="name"/>
                    <field name="points_required"/>
                    <field name="discount_type"/>
                    <field name="discount_value"/>
                </tree>
            </field>
        </record>

        <record id="view_reward_point_tier_form" model="ir.ui.view">
            <field name="name">reward.point.tier.form</field>
            <field name="model">reward.point.tier</field>
            <field name="arch" type="xml">
                <form string="Reward Point Tiers">
                    <group>
                        <field name="name"/>
                        <field name="points_required"/>
                        <field name="discount_type"/>
                        <field name="discount_value"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="reward_point_tier_search_view" model="ir.ui.view">
            <field name="name">reward.point.tier.search</field>
            <field name="model">reward.point.tier</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="points_required"/>
                    <field name="discount_type"/>
                    <field name="discount_value"/>
                </search>
            </field>
        </record>

    </data>
</odoo>
