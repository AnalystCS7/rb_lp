<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_reward_point_rule_tree" model="ir.ui.view">
            <field name="name">reward.point.rule.tree</field>
            <field name="model">reward.point.rule</field>
            <field name="arch" type="xml">
                <tree string="Reward Point Rules">
                    <field name="name"/>
                    <field name="rule_type"/>
                    <field name="rule_trigger"/>
                    <field name="rule_amount"/>
                    <field name="rule_points"/>
                </tree>
            </field>
        </record>

        <record id="view_reward_point_rule_form" model="ir.ui.view">
            <field name="name">reward.point.rule.form</field>
            <field name="model">reward.point.rule</field>
            <field name="arch" type="xml">
                <form string="Reward Point Rules">
                    <group>
                        <field name="name"/>
                        <field name="rule_type"/>
                        <field name="rule_trigger"/>
                        <field name="rule_amount"/>
                        <field name="rule_points"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="reward_point_rule_search_view" model="ir.ui.view">
            <field name="name">reward.point.rule.search</field>
            <field name="model">reward.point.rule</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="rule_type"/>
                    <field name="rule_trigger"/>
                    <field name="rule_amount"/>
                    <field name="rule_points"/>
                </search>
            </field>
        </record>

    </data>
</odoo>
