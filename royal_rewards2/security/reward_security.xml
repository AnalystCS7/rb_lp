<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="group_user" model="res.groups">
      <field name="name">User</field>
      <field name="implied_ids" eval="[(4, ref('base.group_public'))]"/>
    </record>

    <record id="group_manager" model="res.groups">
      <field name="name">Manager</field>
      <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_admin" model="res.groups">
      <field name="name">Administrator</field>
      <field name="implied_ids" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_reward_user" model="res.groups">
      <field name="name">Rewards User</field>
      <field name="implied_ids" eval="[(4, ref('royal_rewards2.group_user'))]"/>
    </record>

    <record id="group_reward_manager" model="res.groups">
      <field name="name">Rewards Manager</field>
      <field name="implied_ids" eval="[(4, ref('royal_rewards2.group_reward_user')), (4, ref('royal_rewards2.group_manager'))]"/>
    </record>
  </data>
</odoo>
