<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Define the view for the transaction tree list -->
    <record model="ir.ui.view" id="royal_rewards.transaction_tree_view">
      <field name="name">royal_rewards.transaction.tree</field>
      <field name="model">royal_rewards.transaction</field>
      <field name="arch" type="xml">
        <tree string="Transactions">
          <field name="partner_id"/>
          <field name="date"/>
          <field name="amount"/>
          <field name="type"/>
          <field name="note"/>
        </tree>
      </field>
    </record>

    <!-- Define the action for the transaction list view -->
    <record model="ir.actions.act_window" id="royal_rewards.action_transaction">
      <field name="name">Transactions</field>
      <field name="res_model">royal_rewards.transaction</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Define the menu item for the transaction list -->
    <menuitem id="royal_rewards_menu_transactions"
              name="Transactions"
              parent="royal_rewards_menu_main"
              action="royal_rewards.action_transaction"/>
  </data>
</odoo>
